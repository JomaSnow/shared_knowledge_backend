// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sayings {
  id         String   @id @default(uuid())
  message    String
  author     String
  date       DateTime
  created_at DateTime @default(now())

  @@map("tb_sayings")
}

model Users {
  id         String   @id @default(uuid())
  email      String   @unique
  firstName  String
  lastName   String
  password   String
  role       Role     @default(USER)
  created_at DateTime @default(now())

  @@map("tb_users")
}

enum Role {
  USER
  ADMIN
}
